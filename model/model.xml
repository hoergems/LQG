
<Robot name="3DOFRobot">
<KinBody>   
   <Body name="ManBase" type="dynamic">
     <Translation>0.0  0.0  0.0</Translation>
     <Geom type="cylinder">
       <rotationaxis>1 0 0 90</rotationaxis>
       <radius>0.03</radius>
       <height>0.02</height>
       <diffuseColor>0.05 0.05 0.05</diffuseColor>
     </Geom>
   </Body>
   
   <Body name="ManLink0" type="dynamic">
     <offsetfrom>ManBase</offsetfrom>
     <Translation>0 0 0.0</Translation>
     <Geom type="box">
       <Translation>0.5 0 0</Translation>
       <Extents>0.5 0.01 0.005</Extents>
     </Geom>
   </Body>
   <Joint circular="true" name="Manj0" type="hinge" enable="true">
     <Body>ManBase</Body>
     <Body>ManLink0</Body>     
     <limitsdeg>-360 360</limitsdeg>
     <!--<maxveldeg>50</maxveldeg>-->
     <axis>0 0 1</axis>
   </Joint>
   
   <Body name="ManLink1" type="dynamic">
     <offsetfrom>ManLink0</offsetfrom>
     <Translation>1.0 0 0.0</Translation>
     <Geom type="box">
       <Translation>0.5 0.0 0.0</Translation>
       <Extents>0.5 0.01 0.005</Extents>
     </Geom>
   </Body>
   <Joint circular="true" name="Manj1" type="hinge" enable="true">
     <Body>ManLink0</Body>
     <Body>ManLink1</Body>     
     <limitsdeg>-360 360</limitsdeg>
     <!--<maxveldeg>50</maxveldeg>-->
     <axis>0 0 1</axis>     
   </Joint>

   <Body name="ManLink2" type="dynamic">
     <offsetfrom>ManLink1</offsetfrom>
     <Translation>1.0 0 0.0</Translation>
     <Geom type="box">
       <Translation>0.5 0.0 0.0</Translation>
       <Extents>0.5 0.01 0.005</Extents>
     </Geom>
   </Body>
   <Joint circular="true" name="Manj2" type="hinge" enable="true">
     <Body>ManLink1</Body>
     <Body>ManLink2</Body>     
     <limitsdeg>-360 360</limitsdeg>
     <!--<maxveldeg>50</maxveldeg>-->
     <axis>0 0 1</axis>     
   </Joint>

   <!--<Body name="Arm2" type="dynamic">
     <offsetfrom>Arm1</offsetfrom>
     <Translation>0.0 0 0.0</Translation>
     <Geom type="box">
       <Translation>1.0 0.0 0</Translation>
       <Extents>1.0 0.0075 0.005</Extents>
     </Geom>
   </Body>
   <Joint circular="true" name="j2" type="hinge">
     <Body>Arm1</Body>
     <Body>Arm2</Body>     
     <limitsdeg>-360 360</limitsdeg>
     <axis>0 0 1</axis>     
   </Joint>-->
   
   
 </KinBody>
 
 <Manipulator name="Man">
   <effector>ManLink2</effector>   
   <base>ManBase</base>           
   <joints>Manj0 Manj1 Manj2</joints>      
   <!--<closingdirection>1</closingdirection>-->
   <direction>1 0 0</direction>
   <Translation>0.125 0 0</Translation>
 </Manipulator>

</Robot>
